                                        <TextBlock.Foreground>
                                            <SolidColorBrush Color="{DynamicResource Dark-002}"/>
                                        </TextBlock.Foreground>
                                    </TextBlock>
                                    <Border Grid.Column="1" CornerRadius="1">
                                        <Border.Background>
                                            <SolidColorBrush Color="White"/>
                                        </Border.Background>
                                        <TextBox Text="{Binding CreatedConnectionPassword, ElementName=AU, UpdateSourceTrigger=PropertyChanged}" BorderBrush="{x:Null}" Background="{x:Null}" BorderThickness="0" VerticalContentAlignment="Center" Padding="10,1,1,1" FontFamily="/ControlSystemsLibrary;component/Resources/Fonts/#Roboto" FontSize="13" >
                                            <TextBox.Foreground>
                                                <SolidColorBrush Color="{DynamicResource Dark-003}"/>
                                            </TextBox.Foreground>
                                        </TextBox>
                                    </Border>
                                </Grid>
                                <Grid x:Name="ConnectionStringGrid" Visibility="{Binding CreatedModeConnectionStringVisibility, ElementName=AU, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Margin="0,7" Grid.RowSpan="4" d:IsHidden="True">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Строка     подключения:" FontFamily="/ControlSystemsLibrary;component/Resources/Fonts/#Roboto Condensed" VerticalAlignment="Top" FontSize="13" Margin="0,6,0,0" TextWrapping="Wrap">
                                        <TextBlock.Foreground>
                                            <SolidColorBrush Color="{DynamicResource Dark-002}"/>
                                        </TextBlock.Foreground>
                                    </TextBlock>
                                    <Button Style="{DynamicResource ButtonStyle-000}" VerticalAlignment="Bottom" Height="28" Background="White" BorderThickness="1" Margin="0,0,20,0" Content="Вставить" FontFamily="/ControlSystemsLibrary;component/Resources/Fonts/#Roboto" Click="ClickPasteButton">
                                        <Button.BorderBrush>
                                            <SolidColorBrush Color="{DynamicResource Light-005}"/>
                                        </Button.BorderBrush>
                                        <Button.Foreground>
                                            <SolidColorBrush Color="{DynamicResource Dark-003}"/>
                                        </Button.Foreground>
                                    </Button>

                                    <Border Grid.Column="1" CornerRadius="1" Background="White">
                                        <TextBox Text="{Binding CreatedConnectionString, ElementName=AU, UpdateSourceTrigger=PropertyChanged}"  BorderBrush="{x:Null}" Background="{x:Null}" BorderThickness="0" Padding="5" FontFamily="/ControlSystemsLibrary;component/Resources/Fonts/#Roboto" FontSize="13" TextWrapping="Wrap">
                                            <TextBox.Foreground>
                                                <SolidColorBrush Color="{DynamicResource Dark-003}"/>
                                            </TextBox.Foreground>
                                        </TextBox>
                                    </Border>
                                </Grid>

                            </Grid>
                        </Border>
                        <Grid Grid.Row="2" Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="5*"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox Content="Connection string" IsChecked="{Binding CreatedMode, ElementName=AU, UpdateSourceTrigger=PropertyChanged}" Style="{DynamicResource CheckBoxStyle-001}" FontFamily="/ControlSystemsLibrary;component/Resources/Fonts/#Roboto Condensed" FontSize="13" Margin="6,0,0,0" Grid.ColumnSpan="5" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <CheckBox.Foreground>
                                    <SolidColorBrush Color="{DynamicResource Dark-004}"/>
                                </CheckBox.Foreground>
                            </CheckBox>
                            <Button Content="Проверить соединение" IsEnabled="{Binding CheckCreatedConnectionButtonEnabled, ElementName=AU, UpdateSourceTrigger=PropertyChanged}" Style="{DynamicResource ButtonStyle-001}" BorderThickness="0" FontFamily="/ControlSystemsLibrary;component/Resources/Fonts/#Roboto" Margin="0" Padding="1" Foreground="White" Grid.Column="2" BorderBrush="{x:Null}" Height="37" Click="ClickCheckCreatedConnectionButton">
                                <Button.Background>
                                    <SolidColorBrush Color="{DynamicResource Blue-001}"/>
                                </Button.Background>
                            </Button>
                            <Button Content="Сохранить" IsEnabled="{Binding SaveCreatedConnectionButtonEnabled, ElementName=AU, UpdateSourceTrigger=PropertyChanged}" Style="{DynamicResource ButtonStyle-001}" BorderThickness="0" FontFamily="/ControlSystemsLibrary;component/Resources/Fonts/#Roboto" Margin="0" Padding="1" Foreground="White" Grid.Column="4" BorderBrush="{x:Null}" Height="37" Click="ClickSaveCreatedConnectionButton">
                                <Button.Background>
                                    <SolidColorBrush Color="{DynamicResource Blue-001}"/>
                                </Button.Background>
                            </Button>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1" Margin="0,0,0,20" Orientation="Vertical" VerticalAlignment="Bottom">

                <ContentControl Content="{Binding LoaderUC, ElementName=AU, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="40" />

                <TextBox Foreground="{Binding MessageTextColor, ElementName=AU, UpdateSourceTrigger=PropertyChanged}" Text="{Binding MessageText, ElementName=AU, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" BorderThickness="0" Background="Transparent" FontFamily="/ControlSystemsLibrary;component/Resources/Fonts/#Roboto" FontSize="13" HorizontalContentAlignment="Center" TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>
    </Grid>

</UserControl>
